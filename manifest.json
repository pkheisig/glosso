{
    "manifest_version": 3,
    "name": "Glosso",
    "version": "2.1",
    "description": "Instant definitions from Wiktionary with robust multi-language support.",
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "https://en.wiktionary.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "WordPeek Settings",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}